<main>
  <section id="sign_in" style="background-image: url('/assets/loginbg.jpg');">
    <div class="contain">
      <div class="flex_blk align-items-center">
        <div>
          <div class="logo_blk">
            <%= image_tag 'logo.svg', alt: 'logo' %>
          </div>
          <h2>Sign in to manage</h2>
          <p>Enter your detail below</p>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <label for="">Email Address</label>
            <div class="form_blk">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Type Here', class: 'input' %>
            </div>
            <div class="d-flex align-items-center justify-content-between">
              <label for="">Password</label>
              <%= link_to "Forgot Password?", new_password_path(resource_name) %>
            </div>
            <div class="form_blk mb-0">
              <div class="icon_blk">
                <%= image_tag 'lockIcon.svg', alt: 'icon' %>
              </div>
              <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Type Here',class: 'input' %>
            </div>
            <div class="btn_blk">
              <%= f.submit "Sign In", class: 'site_btn' %>
              <button type="button" class="site_btn">Sign In</button>
            </div>
          <%end%>
        </div>
      </div>
    </div>
  </section>
</main>