<main>


  <section id="account_section">
    <%= render 'shared/sidebar' %>
    <div id="guide_lines" class="main_side">
      <div id="top_header">
        <h1>Guidelines</h1>
        <%= render 'shared/header-side' %>
      </div>

      <div class="right-con-inner">

        <div class="dropdown mb-4">
          <select class="text dropdown-toggle input w-auto fs_5 fw_600" id="guideline_select">
            <option value="1" <%= params[:permalink] == "terms&condition" ? "selected" : "" %>>
                Terms & Condition
            </option>
            <option value="3" <%= params[:permalink] == "privacy_policy" ? "selected" : "" %>>
                Privacy Policy
            </option>
             <option value="2" <%= params[:permalink] == "faq" ? "selected" : "" %>>
                   FAQ
            </option>
          </select>
        </div>
        <a id="guide_lines_1" href="<%=privacy_policy_path(permalink: "terms&condition") %>" hidden></a>
        <a id="guide_lines_2" href="<%=privacy_policy_path(permalink: "faq") %>" hidden></a>
        <a id="guide_lines_3" href="<%=privacy_policy_path(permalink: "privacy_policy")%>" hidden></a>
      <div class="row">
          <div class="col-lg-8">
            <div class="details">
              <% if @page.present?%>
               <%= @page.content%>
             <% end %>
           </div>
         </div>
         <div class="col-lg-4">
          <div class="date-section">
            <div class="btn_blk">
              <button class="site_btn save_btn">Save</button>
            </div>
            <h3>December 23, 2021</h3>
            <p class="mb-2">Update Logs</p>
            <p class="fw_600 mb-2">11/12/2021</p>
            <p class="mb-3">Term & Conditions - Updated!</p>
            <hr class="hr">
            <p class="fw_600 mb-2">09/19/2021</p>
            <p>FAQ</p>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>
</main>
