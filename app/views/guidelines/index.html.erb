<main>


  <section id="account_section">
    <%= render 'shared/sidebar' %>
    <div id="guide_lines" class="main_side">
      <div id="top_header">
        <h1>Guidelines</h1>
        <%= render 'shared/header-side' %>
      </div>

      <div class="right-con-inner">

        <div class="dropdown">
          <button class="seletor text dropdown-toggle chevron fs_5 fw_600" data-bs-toggle="dropdown">
            <% if params[:privacy_policy].present? %>
               Privacy Policy
            <% elsif params[:faq].present? %>
               FAQ
            <% else %>
              Terms & Condition
            <%end%>
          </button>
          <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

          <select  onchange="getval(this);">
            <ul class="list dropdown-menu">
             <option value="1"><li><%= link_to 'Terms and Conditions', privacy_policy_path(permalink: "terms&condition"), value: "1" %></li></option>
             <option value="1"><li><%= link_to 'Privacy Policy', privacy_policy_path(permalink: "privacy_policy"), value: "2" %></li></option>
  </ul>
          </select>
           <select  onchange="getval(this);">
            <ul class="list dropdown-menu">
              <li><%= link_to 'Terms and Conditions', privacy_policy_path(permalink: "terms&condition"), value: "1" %></li>
              <li><%= link_to 'Privacy Policy', privacy_policy_path(permalink: "privacy_policy"), value: "2" %></li>
              <li><%= link_to 'FAQ', privacy_policy_path(permalink: "faq"), value: "3" %></li>

            </ul>
          </select>
          
            
        </div>
        <div class="row">
          <div class="col-lg-8">
            <div class="details">
              <% if @page.present?%>
               <%= @page.content%>
             <% end %>
           </div>
         </div>
         <div class="col-lg-4">
          <div class="date-section">
            <div class="btn_blk">
              <button class="site_btn save_btn">Save</button>
            </div>
            <h3>December 23, 2021</h3>
            <p class="mb-2">Update Logs</p>
            <p class="fw_600 mb-2">11/12/2021</p>
            <p class="mb-3">Term & Conditions - Updated!</p>
            <hr class="hr">
            <p class="fw_600 mb-2">09/19/2021</p>
            <p>FAQ</p>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>
<!-- dash -->


</main>
function getval(sel)
{
    alert(sel.value);
}
