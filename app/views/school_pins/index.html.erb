<main>
  <section id="account_section">
    <%= render 'shared/sidebar' %>
    <div id="school_pin" class="main_side">
      <div id="top_header">
        <h1>Pin</h1>
        <%= render 'shared/header-side' %>
      </div>
      <div class="row">
        <div class="col-3">
          <%= form_with model: @school_pin do |form| %>
            <div class="form_blk">
            <label for="">Name</label>
            <%= form.text_field :pin_name, class:"input" %>
            </div>
            <div class="form_blk">
            <label for="">Longtitude</label>
            <%= form.text_field :longtitude, class:"input" %>
            </div>
            <div class="form_blk">
            <label for="">Latitude</label>
            <%= form.text_field :latitude, class: "input" %>
            </div>
            <div class="btn_blk " style="margin-top: 30px">
              <button type="submit" class="site_btn">Submit</button>
            </div>
          <% end %>

          <% if flash.alert.present? %>
            <div class="error error-success note-shadow">
              <% flash.alert.each do |msg| %>
                <p><%= msg %></p>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="col-9">
          <div class="map_blk">
            <img src="/assets/map.jpg" alt="">
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- dash -->


</main>