<section id="account_section">
  <%= render 'shared/sidebar' %>
  <div id="dream_address" class="main_side">
    <div id="top_header">
      <h1>Dream Address</h1>
      <%= render 'shared/header-side' %>
    </div>
    <div class="row">
      <div class="col-6">
        <ul class="top_blk">
          <li>
            <div class="dropdown">
              <button class="filter text dropdown-toggle fs_5 fw_600" data-bs-toggle="dropdown">
                <div class="img_blk">
                  <%= image_tag 'filter.svg', alt: '' %>
                </div>
                filters
              </button>
              <%= render 'shared/drop_down' %>
            </div>
          </li>
          <li>
            <div class="form_blk">
              <div class="icon_blk">
                <%= image_tag 'search.svg', alt: '' %>
              </div>
              <input type="search" placeholder="Search" class="input">
            </div>
          </li>
          <li>
            <button type="button" class="filter">
              <div class="img_blk">
                <%= image_tag 'csv-file-icon.svg', alt: '' %>
              </div>
              Download CSV
            </button>
          </li>
        </ul>
      </div>
    </div>
    <div class="table_blk">
      <table class="mt-5 w-100 overflow-x-auto ">
        <thead>
        <tr>
          <th style="width: 6rem">
            Full Name
          </th>
          <th style="width: 20rem">
            Dream Address
          </th>
        </tr>
        </thead>
        <tbody>
          <% @address.each do |record| %>
           <tr>
            <td class="fw_500 user_name "><%= record.user.full_name%></td>
            <td class="dream_address">
              <p>
                <%= record.location %>
              </p>
            </td>
          </tr>
          <%end%>
        </tbody>
      </table>
    </div>
    <%= render 'shared/pagination' ,data: @address%>
  </div>
</section>