<section id="account_section">
  <%= render "shared/sidebar" %>
  <div id="buy_house" class="main_side">
    <div id="top_header">
      <h1>Sell CONDO</h1>
      <%= render "shared/header-side" %>
    </div>
    <div class="row">
      <div class="col-6">
        <ul class="top_blk">
          <li>
            <div class="dropdown">
              <button class="filter text dropdown-toggle fs_5 fw_600" data-bs-toggle="dropdown">
                <div class="img_blk">
                  <%= image_tag 'filter.svg', alt: '' %>
                </div>
                filters
              </button>
                 <%= render "shared/drop_down" %>
            </div>
          </li>
          <li>
            <div class="form_blk">
              <div class="icon_blk">
                <%= image_tag 'search.svg', alt: '' %>
              </div>
              <input type="search" placeholder="Search" class="input">
            </div>
          </li>
          <li>
            <button type="button" class="filter">
              <div class="img_blk">
                <%= image_tag 'csv-file-icon.svg', alt: '' %>
              </div>
              <%= link_to "Download CSV",sell_condo_users_data_path(format: 'csv', search: params[:search], page: params[:page], checkbox_value:""), id: "downloadbtncustom" %>
            </button>
          </li>
        </ul>
      </div>
    </div>
    <div class="table_blk">
      <table class="mt-5  ">
        <thead>

        <tr>
          <th style="width: 18.9rem">
            Full Name
          </th>
          <th style="width: 14.4rem">
            Property Type
          </th>
          <th style="width: 18.7rem">
            Post Title
          </th>
          <th style="width: 15.8rem">
            Asking Price
          </th>
          <th style="width: 13.1rem">
            Years Built
          </th>
          <th style="width: 26.8rem">
            Street Address
          </th>
          <th style="width: 13.8rem">
            Unit #
          </th>
          <th style="width: 13.8rem">
            Locker
          </th>
          <th style="width: 18rem">
            Condo Corporation
          </th>
          <th style="width: 12.9rem">
            Bedrooms
          </th>
          <th style="width: 22.7rem">
            Bathrooms
          </th>
          <th style="width: 14.7rem">
            Living Space (ft)
          </th>
          <th style="width: 14.5rem">
            Parking Spaces
          </th>
          <th style="width: 15.3rem">
            Garage Spaces
          </th>
          <th style="width: 16.4rem">
            Parking Type
          </th>
          <th style="width: 20rem">
            Parking Ownership
          </th>
          <th style="width: 16.9rem">
            Garage
          </th>
          <th style="width: 16.4rem">
            Condo Type
          </th>
          <th style="width: 15.7rem">
            Condo Style
          </th>
          <th style="width: 18.4rem">
            Exterior
          </th>
          <th style="width: 12rem">
            Balcony
          </th>
          <th style="width: 12.4rem">
            Exposure
          </th>
          <th style="width: 12.1rem">
            Security
          </th>
          <th style="width: 14.3rem">
            Pets Allowed
          </th>
          <th style="width: 18.2rem">
            Utilities Incl.
          </th>
          <th style="width: 12.3rem">
            Water
          </th>
          <th style="width: 12.6rem">
            Sewer
          </th>
          <th style="width: 16.6rem">
            Heat Source
          </th>
          <th style="width: 15.3rem">
            Heat Type
          </th>
          <th style="width: 18.4rem">
            Air Conditioner
          </th>
          <th style="width: 13.9rem">
            Laundry
          </th>

          <th style="width: 14.5rem">
            Fireplace
          </th>
          <th style="width: 18.3rem">
            Central Vacuum
          </th>
          <th style="width: 16.9rem">
            Basement
          </th>
          <th style="width: 15.2rem">
            Pool
          </th>
          <th style="width: 18.4rem">
            Condo/HOA fee
          </th>
          <th style="width: 14.1rem">
            Tax Year
          </th>
          <th style="width: 56.5rem">
            Property Description
          </th>
          <th style="width: 56.3rem">
            Appliances & Other Items
          </th>
          <th style="width: 16.5rem">
            No. of Rooms
          </th>
          <th style="width: 14.2rem">
            Lot Depth
          </th>
          <th style="width: 14.2rem">
            Lot Depth Unit
          </th>
          <th style="width: 16.1rem">
            Lot Frontage
          </th>
          <th style="width: 16.1rem">
            Lot Frontage Unit
          </th>
          <th style="width: 14.8rem">
            Lot Size
          </th>
          <th style="width: 14.8rem">
            Lot Size Unit
          </th>
          <th>
            Level
          </th>
        </tr>
        </thead>
        <tbody>
           <% @condos.each do |condo|%>
        <tr>
          <td class="fw_500 user_name "><% condo.user.full_name%></td>
          <td><%= condo.type%></td>
          <td><%= condo.title%></td>
          <td style="color: #00A66C;"><%= condo.price%></td>
          <td><%= condo.year_built%></td>
          <td><%= condo.address%></td>
          <td><%= condo.unit%></td>
          <td><%= condo.locker%></td>
          <td><%= condo.condo_corporation_or_hqa%></td>
          <td><%= condo.bed_rooms%></td>
          <td><%= condo.bath_rooms%></td>
          <td><%= condo.living_space%></td>
          <td><%= condo.total_parking_spaces%></td>
          <td><%= condo.garage_spaces%></td>
          <td><%= condo.parking_type%></td>
          <td><%= condo.parking_ownership%></td>
          <td><%= condo.garage%></td>
          <td><%= condo.condo_type%></td>
          <td><%= condo.condo_style%></td>
          <td><%= condo.exterior%></td>
          <td><%= condo.balcony%></td>
          <td><%= condo.exposure%></td>
          <td><%= condo.security%></td>
          <td><%= condo.pets_allowed%></td>
          <td><%= condo.included_utilities%></td>
          <td><%= condo.water%></td>
          <td><%= condo.sewer%></td>
          <td><%= condo.heat_source%></td>
          <td><%= condo.heat_type%></td>
          <td><%= condo.air_conditioner%></td>
          <td><%= condo.laundry%></td>
          <td><%= condo.fireplace%></td>
          <td><%= condo.central_vacuum%></td>
          <td><%= condo.basement%></td>
          <td><%= condo.pool%></td>
          <td><%= condo.condo_fees%></td>
          <td><%= condo.tax_year%></td>
          <td><%= condo.property_description%></td>
          <td><%= condo.appliances_and_other_items%></td>
          <td><%= condo.total_number_of_rooms%></td>
          <td><%= condo.lot_depth%></td>
          <td><%= condo.lot_depth_unit%></td>
          <td><%= condo.lot_frontage%></td>
          <td><%= condo.lot_frontage_unit%></td>
          <td><%= condo.lot_size%></td>
          <td><%= condo.lot_size_unit%></td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <%= render 'shared/pagination' ,data: @condos%>
  </div>
</section>